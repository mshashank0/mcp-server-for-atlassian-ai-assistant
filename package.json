{
  "name": "atlassian-mcp-server",
  "version": "1.0.0",
  "description": "MCP Servers for Bitbucket, Confluence, Jira, and Image Generation (Node.js + TypeScript)",
  "type": "module",
  "packageManager": "yarn@3.2.4",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "build": "yarn tsc",
    "dev": "tsx src/index.ts",
    "dev:bitbucket": "tsx src/bitbucket/index.ts",
    "dev:confluence": "tsx src/confluence/index.ts",
    "dev:jira": "tsx src/jira/index.ts",
    "start": "node dist/index.js",
    "start:bitbucket": "node dist/bitbucket/index.js",
    "start:confluence": "node dist/confluence/index.js",
    "start:jira": "node dist/jira/index.js",
    "test:bitbucket": "tsx src/bitbucket/test/bitbucket.test.ts",
    "test:bitbucket:write": "tsx src/bitbucket/test/bitbucket.test.ts -w",
    "test:confluence": "tsx src/confluence/test/confluence.test.ts",
    "test:confluence:write": "tsx src/confluence/test/confluence.test.ts -w",
    "test:jira": "tsx src/jira/test/jira.test.ts",
    "test:jira:write": "tsx src/jira/test/jira.test.ts -w"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "bitbucket",
    "confluence",
    "jira",
    "atlassian",
    "server",
    "data-center"
  ],
  "author": "mshashank0",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "form-data": "^4.0.5",
    "jsdom": "^23.0.0",
    "markdown-it": "^14.0.0",
    "turndown": "^7.1.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/form-data": "^2.5.2",
    "@types/jsdom": "^21.1.0",
    "@types/markdown-it": "^13.0.0",
    "@types/node": "^22.0.0",
    "@types/turndown": "^5.0.0",
    "@types/winston": "^2.4.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
